sudo tap 'homebrew/bundle'

# Binaries
sudo brew 'awscli'
sudo brew 'bash' # Latest Bash version
sudo brew 'bat' # "cat" on steroids
sudo brew 'coreutils' # Those that come with macOS are outdated
sudo brew 'ffmpeg'
sudo brew 'gh'
sudo brew 'git'
sudo brew 'gnupg2'
sudo brew 'grep'
sudo brew 'httpie'
sudo brew 'hub'
sudo brew 'mackup'
sudo brew 'mas' # Mac App Store manager
sudo brew 'pkg-config' # https://github.com/driesvints/dotfiles/issues/20
sudo brew 'trash' # Manage the Trash bin
sudo brew 'tree' # List directories in a tree structure
sudo brew 'zlib' # Needed for Memcached

